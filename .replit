modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "docs"

[[workflows.workflow]]
name = "dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "docs"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd docs && npm start -- --port 3000 --host 0.0.0.0"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32975
externalPort = 4200

[[ports]]
localPort = 34955
externalPort = 3003

[[ports]]
localPort = 42023
externalPort = 3000

[[ports]]
localPort = 43839
externalPort = 3001

[[ports]]
localPort = 44759
externalPort = 3002

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "5000"]
build = ["npm", "run", "build"]
